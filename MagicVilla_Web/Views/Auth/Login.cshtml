@model MagicVilla_Web.Models.DTO.LoginRequestDTO

<form asp-controller="Auth" method="post">
    <div class="container border p-4 rounded shadow">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row text-center my-4">
            <h2>Login</h2>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Username" class="form-control" type="text" placeholder="Username ..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <label asp-for="Password" class="form-label"></label>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password ..." />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6 offset-3 text-center">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
