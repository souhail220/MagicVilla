@model MagicVilla_Web.Models.VM.VillaNbCreateVM

<form asp-controller="VillaNb" asp-action="UpdateVillaNbForm" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa Number</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNb.VillaNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNb.VillaNumber" class="form-control" />
                <span asp-validation-for="VillaNb.VillaNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNb.VillaID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNb.VillaID" asp-items="@Model.villaList" class="form-control">
                    <option disabled selected> -- select a Villa -- </option>
                </select>
                <span asp-validation-for="VillaNb.VillaID" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNb.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNb.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNb.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNb" asp-controller="VillaNb" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <button type="submit" class="btn btn-success form-control">Update</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}